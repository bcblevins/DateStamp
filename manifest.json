{
  "manifest_version": 3,
  "name": "Timestamper",
  "version": "1.0",
  "description": "Inserts the current date and time at the cursor.",
  "permissions": ["contextMenus", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}